@model Project.Models.HangmanGame
@{
    ViewData["Title"] = "Hangman";
}
<link rel="stylesheet" href="/css/site.css" />
<div class="hangman-container">
    <h1>Hangman</h1>
    <pre class="hangman-ascii">@Model.HangmanAsciiArt</pre>
    <div class="word">@Model.GetMaskedWord()</div>
    <div class="guesses">
        Guessed: @string.Join(", ", Model.Guesses)
    </div>
    <div class="status">
        @if (Model.IsWon)
        {
            <span class="won">You won! The word was @Model.Word.</span>
        }
        else if (Model.IsLost)
        {
            <span class="lost">Game over! The word was @Model.Word.</span>
        }
        else
        {
            <form asp-action="Guess" method="post">
                <input name="letter" maxlength="1" required pattern="[a-zA-Z]" />
                <button type="submit">Guess</button>
            </form>
        }
    </div>
    <div class="attempts">Attempts left: @(Model.MaxAttempts - Model.WrongGuesses)</div>
    <form asp-action="NewGame" method="get">
        <button type="submit">New Game</button>
    </form>
</div>
